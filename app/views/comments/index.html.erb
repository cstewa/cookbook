<h1>Listing comments</h1>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= link_to 'Show', recipe_comment(comment) %></td>
    <td><%= link_to 'Edit', edit_recipe_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', recipe_comment(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

